@page
@model InlamningASP1.Pages.TheEventsModel

@{
    ViewData["Title"] = "TheEvents";
}

<h1>TheEvents</h1>


<p>
    <a asp-page="Create">Create New</a>
</p>

        @foreach (var item in Model.Event)
        {

            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            @Html.DisplayFor(modelItem => item.Title) 
                            </button>
                        </h2>
                    </div>

                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body">
                            @Html.DisplayNameFor(model => model.Event[0].Description) @Html.DisplayFor(modelItem => item.Description)
                            <br />

                            @Html.DisplayNameFor(model => model.Event[0].Place) @Html.DisplayFor(modelItem => item.Place)
                            <br />
                            @Html.DisplayNameFor(model => model.Event[0].Adress) @Html.DisplayFor(modelItem => item.Adress)
                            <br />

                            @Html.DisplayNameFor(model => model.Event[0].Date) @Html.DisplayFor(modelItem => item.Date)
                            <br />

                            @Html.DisplayNameFor(model => model.Event[0].SpotsAvailable) @Html.DisplayFor(modelItem => item.SpotsAvailable)
                            <br />
                           | <a asp-page="./Details" asp-route-id="@item.EventId">Details</a> | <a asp-page="./Delete" asp-route-id="@item.EventId">Delete</a>



                        </div>
                    </div>
                </div>

            </div>
   
             
            
        }

